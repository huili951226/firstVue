.container
  margin:0 15px
  .header
    text-align:center
    margin-top:15px
    .close
      position:fixed
      top:20px
      left:15px
      width:16px
      height:16px
      background: url(../../common/images/icon.png) -30px -34px
      background-size:375px 667px
    .title
      display:inline-block
      font-size:16px
      color:#333
      margin-bottom:50px
  .logo
    margin-bottom:50px
    text-align:center
    span
      display:inline-block
      width:76px
      height:67px
      background: url(../../common/images/icon.png) -30px -103px
      background-size:375px 667px
  .form
    .phone, .vc, .pwd
      position:relative
      padding:0 10px 10px
      border-b1px(#999999)
      .phone-icon, .vc-icon, .pwd-icon
        display:inline-block
        width:20px
        height:24px
        vertical-align:middle
      input
        padding-left:5px
        outline:none
        color:#999999
        font-size:15px
    .phone
      margin-bottom:30px
      .phone-icon
        background: url(../../common/images/icon.png) -165px -24px
        background-size:375px 667px
    .vc
      margin-bottom:30px
      .vc-icon
        background: url(../../common/images/icon.png) -31px -65px
        background-size:375px 667px
      .obtain
        display:inline-block
        position:absolute
        bottom:12px
        right:0
        padding:5px 15px
        border:1px solid #ff7f00
        border-radius:20px
        text-align:center
        font-size:14px
        color:#999999
    .pwd
      .pwd-icon
        background: url(../../common/images/icon.png) -219px -24px
        background-size:375px 667px
      .eye-icon
        display:inline-block
        position:absolute
        bottom:12px
        right:0
        width:22px
        height:14px
        background: url(../../common/images/icon.png) -278px -34px
        background-size:375px 667px
        vertical-align:bottom
    .confirm
      display:block
      width:100%
      height:47px
      line-height:27px
      margin-top:53px   
      margin-bottom:15px
      border-radius:5px
      text-align:center
      border:1px solid #ddd
      color:#ff7f00
      background:transparent
      outline:none
      font-size:16px
      &:active
        background:rgba(255,127,0,0.4)