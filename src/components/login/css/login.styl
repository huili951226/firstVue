.container
  margin:0 15px
  .header
    display:flex
    margin-top:15px
    font-size:16px
    color:#666666
    .close
      position:fixed
      top:20px
      left:15px
      width:16px
      height:16px
      background: url(../../common/images/icon.png) -30px -34px
      background-size:375px 667px
    .login, .add
      flex:1
      a
        display:inline-block
        padding:0 10px 10px
        color:#333333
        &.active
          border-bottom:1px solid #333333
          font-weight:bold
    .login
      text-align:right
      margin-right:36px
    .add
      margin-left:36px
  .logo
    height:145px
    text-align:center
    span
      display:inline-block
      width:76px
      height:67px
      margin-top:39px
      background: url(../../common/images/icon.png) -30px -103px
      background-size:375px 667px
  .form
    .phone, .pwd
      position:relative
      padding:0 10px 10px
      border-b1px(#999999)
      .phone-icon, .pwd-icon
        display:inline-block
        width:20px
        height:26px
        vertical-align:bottom
      input
        padding-left:5px
        outline:none
        font-size:15px
    .phone
      margin-bottom:30px
      .phone-icon
        background: url(../../common/images/icon.png) -165px -24px
        background-size:375px 667px   
    .pwd
      .pwd-icon
        background: url(../../common/images/icon.png) -219px -24px
        background-size:375px 667px
      .eye-icon
        display:inline-block
        position:absolute
        bottom:12px
        right:0
        width:22px
        height:14px
        background: url(../../common/images/icon.png) -278px -34px
        background-size:375px 667px
        vertical-align:bottom
        &:hover
          background: url(../../common/images/icon.png) -318px -34px
          background-size:375px 667px
    .login
      margin-top:53px
      padding:9px 0
      height:27px
      line-height:27px
      border:1px solid #ff7f00
      border-radius:5px
      text-align:center
      &:active
        background:rgba(255,127,0,0.4)
      input
        color:#ff7f00
        background:transparent
        outline:none
        font-size:16px
