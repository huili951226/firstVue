.container
  margin:0 15px
  .form
  	.form-control
  		display:block
  		height:45px
  		line-height:45px
  		margin-top:15px
  		padding-left:15px
  		border:1px solid #ddd
  		border-radius:5px
  		input
  			outline:none
  			font-size:14px
  			color:#999999
	.limit
		padding:7px 16px
		font-size:12px
		color:#999999
	.confirm
      margin-top:30px
      padding:9px 0
      height:27px
      line-height:27px
      border:1px solid #ff7f00
      border-radius:5px
      text-align:center
      &:active
        background:rgba(255,127,0,0.4)
      input
        color:#ff7f00
        background:transparent
        outline:none
        font-size:16px