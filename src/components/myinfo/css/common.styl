.container
  margin:0 15px
  .form
  	.form-control
  		display:block
  		height:45px
  		line-height:45px
  		margin-top:15px
  		padding-left:15px
  		border:1px solid #ddd
  		border-radius:5px
  		input
  			outline:none
  			font-size:14px
  			color:#999999
	.limit
		padding:7px 16px
		font-size:12px
		color:#999999
	.confirm
      display:block
      width:100%
      height:47px
      line-height:27px
      margin-top:53px   
      margin-bottom:15px
      border-radius:5px
      text-align:center
      border:1px solid #ddd
      color:#ff7f00
      background:transparent
      outline:none
      font-size:16px
      &:active
        background:rgba(255,127,0,0.4)